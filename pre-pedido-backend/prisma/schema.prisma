datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  name         String   
  email        String   @unique
  orders       Order[]
  createdAt    DateTime @default(now())
}

model FoodStall {
  id           Int      @id @default(autoincrement())
  name         String   
  email        String   @unique
  orders       Order[]     
  products     Product[]
  description  String?
  createdAt    DateTime @default(now())
}

